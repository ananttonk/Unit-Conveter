<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#818181"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/toolbarBackButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="@string/temperature_converter"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CToF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/background_round"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/celsius_to_fahrenheit"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/CtoK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/background_round"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/celsius_to_kelvin"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/FtoC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/background_round"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/fahrenheit_to_celsius"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/FtoK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/background_round"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/fahrenheit_to_kelvin"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/KtoC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/background_round"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/kelvin_to_celsius"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/KtoF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/background_round"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/kelvin_to_fahrenheit"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>